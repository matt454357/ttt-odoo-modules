<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_move_form_expensify" model="ir.ui.view">
            <field name="name">account.move.form.expensify</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="mode">extension</field>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="expensify_ref" readonly="1" attrs="{'invisible': [('move_type', '!=', 'in_receipt')]}"/>
                </field>
            </field>
        </record>

        <record id="view_in_invoice_receipt_tree_expensify" model="ir.ui.view">
            <field name="name">account.out.invoice.tree.expensify</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_receipt_tree"/>
            <field name="mode">extension</field>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="expensify_ref" optional="hide"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
