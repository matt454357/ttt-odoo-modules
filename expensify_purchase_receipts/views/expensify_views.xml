<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_expensify_account_form" model="ir.ui.view">
            <field name="name">expensify.account.form</field>
            <field name="model">expensify.account</field>
            <field name="arch" type="xml">
                <form string="Account Entry">
                    <header>
                        <!-- Post -->
                        <button name="action_import" string="Import Latest" class="oe_highlight"
                                type="object" groups="account.group_account_user"/>
                        <button name="action_import_all" string="Import All"
                                type="object" groups="account.group_account_user"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="user_id"/>
                                <field name="user_secret"/>
                                <field name="api_url"/>
                            </group>
                            <group>
                                <field name="default_journal_id"/>
                                <field name="start_date"/>
                                <field name="last_import_date"/>
                                <field name="import_errors"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_expensify_account_tree" model="ir.ui.view">
            <field name="name">expensify.account.tree</field>
            <field name="model">expensify.account</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <tree string="Expensify Accounts">
                    <field name="name"/>
                    <field name="default_journal_id"/>
                </tree>
            </field>
        </record>

        <record id="view_expensify_log_tree" model="ir.ui.view">
            <field name="name">expensify.log.tree</field>
            <field name="model">expensify.log</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <tree string="Expensify Import Log">
                    <field name="merchant"/>
                    <field name="expense_date" widget="date"/>
                    <field name="amount"/>
                    <field name="errors"/>
                    <field name="success"/>
                    <field name="log_timestamp"/>
                </tree>
            </field>
        </record>

        <record id="action_expensify_account_form" model="ir.actions.act_window">
            <field name="name">Expensify Accounts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">expensify.account</field>
            <field name="view_id" ref="view_expensify_account_tree"/>
        </record>

        <record id="action_expensify_log_tree" model="ir.actions.act_window">
            <field name="name">Expensify Log</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">expensify.log</field>
            <field name="view_id" ref="view_expensify_log_tree"/>
        </record>

        <menuitem
            id="account_menu_expensify_account"
            name="Expensify Accounts"
            parent="account.account_banks_menu"
            action="action_expensify_account_form"
            groups="account.group_account_user"
            sequence="4"/>

        <menuitem
            id="account_menu_expensify_log"
            name="Expensify Import Log"
            parent="account.account_reports_management_menu"
            action="action_expensify_log_tree"
            groups="account.group_account_user"
            sequence="3"/>

    </data>
</odoo>
